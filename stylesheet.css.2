body {
    margin: 0;
    font-family: "Hiragino Kaku Gothic ProN";
}

a {
    text-decoration: none;
}

.container {
    width: 600px;
    padding: 0 15px;
    margin: 0 auto;
}

.top-wrapper {
    padding: 50px 0 600px 0;
    background-size: cover;
    background-image: url(file:///Users/yamatomiyazawa/Pictures/Photos%20Library.photoslibrary/private/com.apple.Photos/ExternalEditSessions/439DFDF5-5CA9-4640-BDBD-73EA24B1BB8B/IMG_2071.jpeg);
}

.container {
    width: 1170px;
    margin: 0 auto;
}

.top-wrapper h1 {
    color: glay;
    text-align: center;
    opacity: 0.8;
    font-size: 55px;
    letter-spacing: 5px;
}

.top-wrapper h2 {
    text-align: center;
    margin-bottom: 15px;
    opacity: 0.7;
    font-size: 25px;
}

header {
    top: 0;
    width: 100%;
    height: 65px;
    background-color: rgba(34, 49, 52, 0.9);
    position: fixed;
    z-index: 10;
    color: white;
}

.header-right {
    transition: all 0.5s;
    float: right;
    color: white;
    background-color: rgba(255, 255, 255, 0.3);
}

.header-right a {
    display: block;
    line-height: 65px;
    color: white;
    margin: 0 25px;
}

.header-right:hover {
    background-color: rgba(255, 255, 255, 0.5);
}

.header-list li {
    color: white;
    float: left;
    padding-left: 24px;
    margin: 0 auto;
}

.lesson-wrapper {
    background-color: #f7f7f7;
    height: 580px;
    text-align: center;

}

ul {
    list-style: none;
}

.heading {
    font-size: 24px;
    padding-top: 80px;
    padding-bottom: 40px;
    color: #5f5d60;
}

.heading-list li {
    font-size: 20px;
    padding-bottom: 10px;
}

.message-wrapper {
    text-align: center;
    padding-bottom: 80px;
}

.message {
    padding: 15px 40px;
    cursor: pointer;
    background-color: orange;
    box-shadow: 0 7px black;
}

.message:active {
    position: relative;
    box-shadow: none;
    top: 7px;
}

.contact-form {
    padding-top: 100px;
    margin-left: 100px;
}

.contact-form p {
    font-size: 20px;
}

.section-title {
    font-size: 30px;
    margin-left: 100px;
    border-bottom: 1px solid black;
}

input, textarea {
    border: 1px solid black;
    width: 400px;
    padding: 20px;
    font-size: 30px;
    margin-top: 10px;
    margin-bottom: 30px;
}

.contact-submit {
    font-size: 24px;
    cursor: pointer;
    color: #889eab;
    background-color: #dee7ec;
}

footer {
    background-color: brown;
    border-top: 3px solid black;
    float: left;
    padding: 40px 30px;
    width: 100%;
}
