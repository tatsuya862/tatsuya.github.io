html, body,
ul, ol, li,
h1, h2, h3, h4, h5, h6, p, div {
  margin: 0;
  padding: 0;
}

body {
  font-family: 'Hiragino Kaku Gothic ProN W3', sans-serif;
}

li {
  list-style: none;
}

a {
  text-decoration: none;
}

.top-wrapper {
  padding: 180px 0 100px 0;
  background-image: url(https://prog-8.com/images/html/advanced/top.png);
  background-size: cover;
  color: white;
  text-align: center; 
}

.container {
  width: 1170px;
  margin: 0 auto;
}

.top-wrapper h1 {
  color: white;
  opacity: 0.7;
  font-size: 45px;
  letter-spacing: 5px;
}

.top-wrapper p {
  margin-bottom: 15px;
  opacity: 0.7;
}

.signup {
  background-color: #239b76;
  margin-top: 15px;
  margin-bottom: 15px;
}

.facebook {
  background-color: #3b5998;
  margin-right: 10px;
}

.twitter {
  background-color: #55acee;
}

.btn {
  color: white;
  border-radius: 4px;
  padding: 8px 24px;
  opacity: 0.8;
  display: inline-block;
}

.btn:hover {
  opacity: 1;
}

.fa {
  margin-right: 5px;
}

header {
  width: 100%;
  height: 65px;
  background-color: rgba(34, 49, 52, 0.9);
  position: fixed;
  top: 0;
  z-index: 10;
}

.logo {
  width: 124px;
  margin-top: 20px;
}

.header-left {
  float: left;
}

.header-right {
  float: right;
  background-color: rgba(255, 255, 255, 0.3);
  transition: all 0.5s;
}

.header-right:hover {
  background-color: rgba(255, 255, 255, 0.5);
}

.header-right a {
  display: block;
  line-height: 65px;
  color: white;
  margin: 0 25px;
}

.lesson-wrapper {
  background-color: #f7f7f7;
  height: 580px;
  text-align: center;
}

.heading {
  padding-top: 80px;
  padding-bottom: 50px;
  color: #5f5d60;
}

.heading h2 {
  font-weight: normal;
}

.lesson{
  float: left;
  width: 25%;
}

.lesson-icon {
  position: relative;
}

.lesson-icon p {
  position: absolute;
  width: 100%;
  color: white;
  top: 90px;
}

.text-contents {
  width: 80%;
  color: #b3aeb5;
  font-size: 13px;
  display: inline-block;
  margin-top: 15px;
}

.message-wrapper {
  text-align: center;
  padding-bottom: 80px;
}

.message {
  padding: 15px 40px;
  cursor: pointer;
  background-color: #5dca88;
  box-shadow: 0 7px #1a7940;
}

.message:active {
  position: relative;
  box-shadow: none;
  top: 7px;
}

footer img {
  width: 124px;
}

footer p {
  font-size: 12px;
  color: #b3aeb5;
}

footer {
  padding: 30px 0;
  border-top: 1px solid #eee;
}





/* ここからレスポンシブデザイン*/

@media (max-width: 1000px) {
    .lesson-icon {
        width: 50%;
        flex-direction: row;
    }
}

@media (max-width: 670px) {
    .lesson-icon {
        flex-direction: column;
        width: 100%;
    }

}
