@charset "UTF-8";

body {
    color: black;
}

img {
    max-width: 100%;
}

ul {
    list-style: none;
}




.top-img img {
    width: 100%;
    height: 100vh;
    object-fit: cover;
    object-position: center top;
    margin-bottom: 80px;
}

.main {
    text-align: center;
}

.main h2 {
    font-size: 35px;
    
}

.main p {
    margin-bottom: 100px;
}


.main-img {
    display: flex;
    margin-bottom: 60px;
}

.main-img li {
    width: calc(100%/3);
}

.main-img li img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    vertical-align: bottom;
}


.text {
    margin-bottom: 80px;
    padding: 0 20px;
    text-align: center;
}

.text .btn {
    color: black;
    display: inline-block;
    border: solid 1px black;
    text-decoration: none;
    font-size: 0.875rem;
    padding: 18px 60px;
}

.sns {
    text-align: center;
    display: inline-block;
    display: flex;
}

.sns li {
    color: black;
    padding-left: 30px;
    font-size: 14px;
}

.sns a {
    color: black;
    font-size: 15px;
    text-align: center;
}



footer {
    text-align: center;
}

footer .sns {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
}

footer .sns li {
    margin: 0 10px;
}
